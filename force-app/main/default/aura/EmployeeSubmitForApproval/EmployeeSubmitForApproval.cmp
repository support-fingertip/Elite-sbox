<aura:component controller="EmployeeSubmitForApprovalController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:appHostable" access="global" >
    <aura:attribute name="isloading" type="Boolean" default="false" />
    <aura:attribute name="recordId" type="string" />
    <aura:attribute name="Comments" type="string" />
    <aura:attribute name="loadingScreenSize" type="decimal" default="1" />
    <aura:attribute name="assignmentWarning" type="String" default="" />
    <aura:attribute name="showWarning" type="Boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:html tag="style">
        .slds-modal__container{ 
        max-width: 75rem !important;
        width:60% !important;
        } 
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }
        .slds-modal__content{
        
        height:unset !important;
        max-height:unset !important;
        }
        .closeIcon{
        display:none;
        }
        .slds-col{
        margin-left:5px;
        }
        .slds-modal__footer {
        text-align: center; /* Center the buttons */
        justify-content: right; /* Center button alignment */
        display: flex;
        }
        
        @media screen and (max-width: 768px) {
        .slds-modal__container {
        max-width: 75rem !important;
        width: 100% !important;
        position: relative;
        max-height: 100% !important;
        left: 0 !important;
        margin: 0 !important; /* Remove margin */
        padding: 0 !important; /* Remove padding */
        }
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }
        .slds-modal__content {
        height: 100% !important;
        max-height: 100% !important;
        padding: 0.5rem; /* Add a small padding for content */
        }
        .closeIcon {
        display: none;
        }
        .slds-col {
        margin-left: 5px;
        }
        .slds-modal__footer {
        text-align: center; /* Center the buttons */
        justify-content: right; /* Center button alignment */
        display: flex;
        }
        .slds-modal__header {
        text-align: center; /* Center the header text */
        }
        
        
        
        } 
        }
        .slds-spinner_container {
        position: absolute; /* Position spinner absolutely within modal */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Center the spinner */
        }
        .mobile-textarea textarea {
        height: 25rem !important; /* or any height you prefer */
        }
    </aura:html>
    <div>
        <lightning:recordEditForm  objectApiName="Employee__c"  aura:id="recordCreateForm">
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Submit for Approval</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <div class="{!$Browser.formFactor=='PHONE' ? 'slds-grid' : 'slds-grid slds-wrap'}">
                            <aura:if isTrue="{!!v.isloading}">
                                <div class="slds-col slds-size_1-of-1" style="padding-right:10px">
                                    <aura:if isTrue="{!v.showWarning}">
                                        <b> 
                                            <p  style="{!$Browser.formFactor == 'PHONE' ? 'font-size:18px;' : 'font-size:14px;'}" >
                                                {!v.assignmentWarning}
                                            </p> 
                                        </b>
                                    </aura:if>
                                    <lightning:textarea name="input3" label="Comments"     class="{!$Browser.formFactor == 'PHONE' ? 'mobile-textarea' : ''}"  placeholder="type here..."  value="{!v.Comments}"/>
                                    
                                </div>
                            </aura:if>
                            <aura:if isTrue="{!v.isloading}">
                                <div class="slds-col slds-size_1-of-1">
                                    <c:loadingScreen size="{!v.loadingScreenSize}" />
                                </div>
                            </aura:if>
                        </div>
                    </div>
                    <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                        <lightning:button
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{!c.Cancel }"/>
                        <lightning:button  variant="brand" onclick="{!c.Approval}" label="Submit" disabled="{!v.isloading}"/>
                        
                    </footer>
                </div>
            </section>
        </lightning:recordEditForm>
    </div>
</aura:component>