<aura:component controller="CreditApprovalComponentController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:appHostable" access="global" >
   
    <aura:attribute name="Saving" type="Boolean" default="false" />
    <aura:attribute name="recordId" type="string" />
    <aura:attribute name="Comments" type="string" />
    <aura:html tag="style">
          .slds-modal__container{ 
        max-width: 75rem !important;
        width:60% !important;
        } 
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }
        .slds-modal__content{
        
        height:unset !important;
        max-height:unset !important;
        }
        .closeIcon{
        display:none;
        }
        .slds-col{
        margin-left:5px;
        }
        .slds-modal__footer {
        text-align: center; /* Center the buttons */
        justify-content: right; /* Center button alignment */
        display: flex;
        }
        
        @media screen and (max-width: 768px) {
        .slds-modal__container {
        max-width: 75rem !important;
        width: 100% !important;
        position: relative;
        max-height: 100% !important;
        left: 0 !important;
        margin: 0 !important; /* Remove margin */
        padding: 0 !important; /* Remove padding */
        }
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }
        .slds-modal__content {
        height: 100% !important;
        max-height: 100% !important;
        padding: 0.5rem; /* Add a small padding for content */
        }
        .closeIcon {
        display: none;
        }
        .slds-col {
        margin-left: 5px;
        }
        .slds-modal__footer {
        text-align: center; /* Center the buttons */
        justify-content: right; /* Center button alignment */
        display: flex;
        }
        .slds-modal__header {
        text-align: center; /* Center the header text */
        }
       
        
        
        } 
        }
        .slds-spinner_container {
        position: absolute; /* Position spinner absolutely within modal */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Center the spinner */
        }
        .textAreaBody {
        --sds-c-textarea-sizing-min-height:60vh;
        }
    </aura:html>
    <div >
     
        
        <!--Use aura:if tag to display/hide popup based on isModalOpen value-->  
        
        <lightning:recordEditForm  objectApiName="Account"  aura:id="recordCreateForm">
            
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Submit for Credit Approval</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <aura:if isTrue="{!v.Saving}">
                            <c:loadingScreen size="1"/>
                            <aura:set attribute="else" >
                                <aura:if isTrue="{!$Browser.formFactor=='PHONE'}">
                                    <div class="slds-grid slds-wrap">
                                        <div class="slds-col slds-size_1-of-1">
                                            <lightning:textarea rows="15" required="true" name="input3" style="padding-right: 10px;" class="textAreaBody" label="Comments" placeholder="type here..."  value="{!v.Comments}"/>
                                            
                                        </div>
                                    </div>
                                </aura:if>
                                <aura:if isTrue="{!$Browser.formFactor=='DESKTOP'}">
                                    <div class="slds-grid">
                                        <div class="slds-col slds-size_1-of-1">
                                            <lightning:textarea name="input3" required="true" label="Comments" placeholder="type here..."  value="{!v.Comments}"/>
                                        </div>
                                        
                                    </div>
                                </aura:if>
                            </aura:set>
                        </aura:if>
                        
                        
                    </div>
                    <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="brand"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{!c.Cancel }"/>
                        <lightning:button  variant="brand" onclick="{!c.Approval }" label="Submit" disabled="{!v.Saving}"/>
                        
                    </footer>
                </div>
            </section>
            
        </lightning:recordEditForm>
        
    </div>
    
    
</aura:component>